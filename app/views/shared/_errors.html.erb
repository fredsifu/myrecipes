<% if obj.errors.any? %>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
      <div id="error_explanation" class="alert alert-danger">
        <h2>Please correct the following <%= pluralize(obj.errors.count, "error") %>:</h2>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  </div>
</div>
<% end %>