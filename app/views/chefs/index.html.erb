<%= render 'shared/page_title', title: 'Our chefs' %>

<ul class="nav nav-tabs">
  <li><%= link_to "Recipes", recipes_path %></li>
  <li class="active"><%= link_to "Chefs", chefs_path %></li>
</ul>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4 center">
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 center">
      <%= link_to gravatar_for(chef, size: 100), chef_path(chef) %>
      <h5>Chef: <%= link_to chef.name, chef_path(chef) %></h5>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4 center">
    <%= will_paginate %>
  </div>
</div>
